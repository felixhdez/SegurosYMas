<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-content">
                    <table class="table table-bordered" style="border: solid 2px #bebebe;">
                        <tbody>
                            <tr>
                                <th style="text-transform:uppercase; background-color: #eee; width: 30%;">@Html.DisplayNameFor(model => model.Codigo)</th>
                                <th style="font-weight:normal;">@Html.DisplayFor(model => model.Codigo)</th>
                            </tr>
                            <tr>
                                <th style="text-transform:uppercase; background-color: #eee; width: 30%;">@Html.DisplayNameFor(model => model.Descripcion)</th>
                                <th style="font-weight:normal;">@Html.DisplayFor(model => model.Descripcion)</th>
                            </tr>
                            <tr>
                                <th style="text-transform:uppercase; background-color: #eee; width: 30%;">Aseguradora</th>
                                <th style="font-weight:normal;">@Html.DisplayFor(model => model.Aseguradora.Descripcion)</th>
                            </tr>
                            <tr>
                                <th style="text-transform:uppercase; background-color: #eee; width: 30%;">Ramo</th>
                                <th style="font-weight:normal;">@Html.DisplayFor(model => model.Ramo.Descripcion)</th>
                            </tr>
                            <tr>
                                <th style="text-transform:uppercase; background-color: #eee; width: 30%;">@Html.DisplayNameFor(model => model.Comision)</th>
                                <th style="font-weight:normal;">@Html.DisplayFor(model => model.Comision)%</th>
                            </tr>
                        </tbody>
                    </table>

                    <div class="modal-footer">
                        @Html.ActionLink("Editar", "Edit", new { id = Model.Id }, new { @class = "btn btn-primary" })
                    </div>
                </div>
            </div>
        </div>
    </div>
 </div>













