@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/Scripts/iCheck/jquery.mask.js"></script>
    <script>
        $("#TipoCliente").change(function () {
            if ($(this).val() == "Natural") {
                $("#txtIdentificacion").mask("000-000000-0000S");
                $("#FechaNacimiento").val("").attr("readonly", false);
            }
            else {
                $("#txtIdentificacion").unmask();
                var d = new Date();

                var month = d.getMonth() + 1;
                var day = d.getDate();

                var output = d.getFullYear() + '-' +
                    (month < 10 ? '0' : '') + month + '-' +
                    (day < 10 ? '0' : '') + day;
                $("#FechaNacimiento").val(output).attr("readonly", true);
            }
        });

        $(document).ready(function () {
            $("#TipoCliente").change();
            $("#TipoCliente,#DepartamentoId").select2({ width: "100%" });
        });
    </script>
}
