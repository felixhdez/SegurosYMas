                    @section scripts{
                        <script type="text/javascript">
                    $(document).ready(function () {

                        $(".btnDetalles").click(function () {

                            var id = $(this).data("value");
                            $("#vistapartialclient").load("/Personas/Details/" + id,

                                function () {
                                    $('#detailsClient').modal("show");
                                }
                            );
                        });
