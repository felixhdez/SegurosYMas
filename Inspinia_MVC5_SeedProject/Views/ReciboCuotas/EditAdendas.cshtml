@model Inspinia_MVC5_SeedProject.Models.ReciboCuota

@{
    ViewBag.Title = "EditAdendas";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-sm-4">
        <h2>Pagos</h2>
        <ol class="breadcrumb">
            <li>
                @Html.ActionLink("Lista","IndexAdendas")
            </li>
            <li class="active">
                <strong>Pagos</strong>
            </li>
        </ol>
    </div>
    <div class="col-sm-8">
        <div class="title-action">
            <a class="btn btn-success btn-outline dim" href="@Url.Action("IndexAdendas","ReciboCuotas")"><i class="fa fa-arrow-left"></i>&nbsp;&nbsp;Regresar</a>
        </div>
    </div>
</div>




<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>Editar Pago de cuota</h5>
                </div>
                <div class="ibox-content">

                    @using (Html.BeginForm()) {
                        @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true)
                            @Html.HiddenFor(model => model.Id)

                            <div class="form-group">
                                @Html.LabelFor(model => model.Fecha,new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Fecha)
                                    @Html.ValidationMessageFor(model => model.Fecha)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.NumRecibo,new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.NumRecibo)
                                    @Html.ValidationMessageFor(model => model.NumRecibo)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Pago,new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Pago)
                                    @Html.ValidationMessageFor(model => model.Pago)
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PagoNeto,new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.PagoNeto)
                                    @Html.ValidationMessageFor(model => model.PagoNeto)
                                </div>
                            </div>

                            @Html.HiddenFor(model => model.CuotaId)

                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Guardar" class="btn btn-primary" />
                                    @Html.ActionLink("Cancelar","IndexAdendas",null,new { @class = "btn btn-white" })
                                </div>
                            </div>
                        </div>
                    }


                </div>
            </div>
        </div>
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


